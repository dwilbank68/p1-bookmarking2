<% if @bookmark.destroyed? %>
    $('#bookmark-' +<%= @bookmark.id %>).hide();
    $('a[href="/topics/<%= @bookmark.topic.id %>"]').find('span.total-bookmarks').text(<%= @bookmark.topic.bookmarks.count %>);
    <% if @bookmark.topic.bookmarks.count == 0 %>
        $('#topic-' +<%= @bookmark.topic.id %>).hide();
    <% end %>
<% else %>
    $('#bookmark-' +<%= @bookmark.id %>).prepend("<div class='alert alert-error'><%= flash[:error] %></div>");
<% end %>


