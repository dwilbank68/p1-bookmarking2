<!DOCTYPE html>
<html>
<head>
  <title>Bookmarking</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <ul class="container nav nav-tabs navbar-fixed-top">
    <li><%#= link_to "Bloccit", root_path %></li>
    <li><%#= link_to "About", about_path %></li>
    <li><%#= link_to "All Topics", topics_path %></li>
    <li><%#= link_to "Popular", posts_path %></li>
    <li><%#= link_to "Users", users_path %></li>
    <div class="user-info"><%= link_to "All Topics", topics_path %></div>
    <div class="pull-right user-info">
      <% if current_user %>
          <%#= image_tag(current_user.avatar.tiny.url) if current_user.avatar? %>
          Hello <%= link_to (current_user.name || current_user.email), current_user %>!
          <span id="submissions"><%= current_user.bookmarks.count %></span> submissions and
          <span id="likes"><%= current_user.likes.count %></span> likes
          <%= link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-user"></span>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-log-out"></span>
          <% end %>
      <% else %>
          <%= link_to "Sign In", new_user_session_path %> or
          <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
    </div><!-- end .pull-right user-info-->

  </ul><!-- end .nav nav-tabs-->

  <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
  <% elsif flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:error] %>
      </div>
  <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
  <% end %>

  <%= yield %>
</div><!-- end .container-->


</body>
</html>
