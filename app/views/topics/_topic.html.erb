<!-- @liked_topics from users/_show.html.erb -->

<% visible_bookmarks = topic.liked_bookmarks(current_user) %>

<div class="topic-block" id="topic-<%= topic.id %>">
  <%= link_to topic do %>
      <h2><%= topic.name.titleize %></h2>
      <span class="badge pull-right liked-bookmarks"><%= visible_bookmarks.count %></span>
      <span class="badge pull-right total-bookmarks hidden"><%= topic.bookmarks.count %></span>
  <% end %>
</div>

<ul class="list-inline">
  <%= render visible_bookmarks %>
</ul>

